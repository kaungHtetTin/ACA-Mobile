<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.1dp"
    app:cardElevation="0.2dp"
    android:id="@+id/card_order"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_group"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_margin="7dp"
            android:src="@drawable/voucher"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/iv_group"
            android:padding="2dp"
            android:textSize="16sp"
            android:text="Voucher ID - 123123"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="?android:textColorPrimary"
            android:layout_below="@id/tv_name"
            android:layout_toEndOf="@id/iv_group"
            android:text="Amount - 123456"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="?android:textColorPrimary"
            android:layout_below="@id/tv_phone"
            android:layout_toEndOf="@id/iv_group"
            android:text="Customer - Kaung Htet Tin"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_customer_name"
            android:textColor="?android:textColorPrimary"
            android:layout_alignParentEnd="true"
            android:text="12/12/2022"
            android:layout_margin="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>