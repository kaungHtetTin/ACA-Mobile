<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv1_footer"
        android:layout_width="wrap_content"
        android:text="Total"
        android:gravity="center"
        android:background="@drawable/bg_stroke_green"
        android:textSize="11sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_toStartOf="@id/tv_total_quantity"
        android:layout_alignParentStart="true"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_total_quantity"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/tv_price_footer"
        android:background="@drawable/bg_stroke_green"
        android:gravity="center"
        android:textColor="@color/my_text_color"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_price_footer"
        android:layout_width="45dp"
        android:text="-"
        android:gravity="center"
        android:background="@drawable/bg_stroke_green"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/my_text_color"
        android:layout_toStartOf="@id/tv_total_amount"
        android:layout_height="32dp"/>


    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/tv_total_foc"
        android:background="@drawable/bg_stroke_green"
        android:gravity="center"
        android:textColor="@color/my_text_color"
        android:textSize="11sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_total_foc"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_stroke_green"
        android:gravity="center"
        android:textColor="@color/my_text_color"
        android:textSize="11sp"
        android:textStyle="bold" />


</RelativeLayout>