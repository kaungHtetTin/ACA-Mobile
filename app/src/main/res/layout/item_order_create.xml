<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="150dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:background="@drawable/bg_price_stroke"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="80dp"
        android:text="0"
        android:inputType="number"
        android:gravity="center"
        android:background="@drawable/bg_edit_stroke"
        android:textSize="14sp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>


    <EditText
        android:id="@+id/et_foc"
        android:layout_width="80dp"
        android:text="0"
        android:inputType="number"
        android:gravity="center"
        android:background="@drawable/bg_edit_stroke"
        android:textSize="14sp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_retail"
        android:layout_width="100dp"
        android:gravity="center"
        android:background="@drawable/bg_price_stroke"
        android:textSize="14sp"
        android:padding="5dp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="100dp"
        android:gravity="center"
        android:background="@drawable/bg_price_stroke"
        android:textSize="14sp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="100dp"
        android:gravity="center"
        android:background="@drawable/bg_price_stroke"
        android:textSize="14sp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="120dp"
        android:gravity="center"
        android:background="@drawable/bg_price_stroke"
        android:textSize="14sp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="80dp"
        android:gravity="center"
        android:background="@drawable/bg_price_stroke"
        android:textSize="14sp"
        android:padding="5dp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>



    <TextView
        android:id="@+id/tv_saving"
        android:layout_width="100dp"
        android:gravity="center"
        android:background="@drawable/bg_stroke_light_yellow"
        android:textSize="14sp"
        android:padding="5dp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_profit"
        android:layout_width="100dp"
        android:gravity="center"
        android:background="@drawable/bg_stroke_light_yellow"
        android:textSize="14sp"
        android:padding="5dp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

</LinearLayout>