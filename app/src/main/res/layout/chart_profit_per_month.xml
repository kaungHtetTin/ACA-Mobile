<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="3dp"
        android:elevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/color_on_primary"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profit In Year"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_from_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dashboard"
                    android:text="Year"
                    android:textColor="@color/white"
                    android:textSize="11sp" />


                <ImageButton
                    android:id="@+id/ibt_previousYear"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/tv_from_header"
                    android:layout_marginStart="20dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/tv_from_header"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/ibt_previousYear"
                    android:gravity="center"
                    android:text="Current Year"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/ibt_nextYear"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/tv_from_header"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_toEndOf="@id/tv_year"/>


            </RelativeLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/header_layout"/>

            <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="32dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/lineChart"
                android:layout_below="@id/header_layout"
                />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineChart"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:text="Total"
                android:textColor="@color/color_on_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_investment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Investment"
                android:layout_marginStart="5dp"
                android:textSize="11sp"
                android:layout_below="@id/tv_total"/>

            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Sale"
                android:layout_marginStart="15dp"
                android:textSize="11sp"
                android:layout_toEndOf="@id/tv_investment"
                android:layout_below="@id/tv_total"/>


            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total"
                android:layout_toEndOf="@id/tv_sale"
                android:layout_marginStart="15dp"
                android:text="Profit"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/tv_total_investment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_on_primary"
                android:layout_below="@id/tv_investment"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tv_total_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignStart="@id/tv_sale"
                android:textColor="@color/color_on_primary"
                android:layout_below="@id/tv_investment"
                android:layout_marginBottom="15dp"/>


            <TextView
                android:id="@+id/tv_total_profit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignStart="@id/tv_profit"
                android:textColor="@color/color_on_primary"
                android:layout_below="@id/tv_investment"
                android:layout_marginBottom="15dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>