<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mLayout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/et_quantity"
        android:background="@drawable/bg_price_stroke"
        android:padding="5dp"
        android:textColor="@color/my_text_color" />

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:text="0"
        android:gravity="center"
        android:background="@drawable/bg_edit_stroke"
        android:textColor="#222"
        android:layout_toStartOf="@id/et_foc"
        android:textSize="14sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/et_foc"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:text="0"
        android:gravity="center"
        android:background="@drawable/bg_edit_stroke"
        android:textColor="#222"
        android:layout_toStartOf="@id/tv_left"
        android:textSize="14sp"
        android:inputType="number"/>


    <TextView
        android:id="@+id/tv_left"
        android:layout_width="80dp"
        android:gravity="center"
        android:text="0"
        android:background="@drawable/bg_price_stroke"
        android:textColor="@color/my_text_color"
        android:layout_alignParentEnd="true"
        android:layout_height="32dp"/>

</RelativeLayout>