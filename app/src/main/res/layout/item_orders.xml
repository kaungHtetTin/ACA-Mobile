<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.1dp"
    app:cardElevation="0.2dp"
    android:id="@+id/card_order"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_group"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_margin="7dp"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/bg_group_thumb" />

        <TextView
            android:id="@+id/tv_voucher_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/iv_group"
            android:padding="2dp"
            android:textSize="16sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="?android:textColorPrimary"
            android:layout_below="@id/tv_voucher_id"
            android:layout_toEndOf="@id/iv_group"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="?android:textColorPrimary"
            android:layout_below="@id/tv_amount"
            android:layout_toEndOf="@id/iv_group"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_group_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/iv_group"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_group_name"
            android:textColor="?android:textColorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>