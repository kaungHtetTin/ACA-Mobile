<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".BusinessActivity">

        <TextView
            android:text="Incoming Orders"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/my_text_color"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/noti_color"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_order"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:elevation="0.2dp"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="  Orders"
                android:textColor="@color/my_text_color"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_business_red" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_sent_order"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:elevation="0.2dp"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="  Sent Orders"
                android:textColor="@color/my_text_color"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_business_red" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_vouchers"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:elevation="0.2dp"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="  Vouchers"
                android:textColor="@color/my_text_color"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_business_red" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:text="My Orders"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/my_text_color"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/noti_color"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_new_order"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:elevation="0.2dp"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="  New Orders"
                android:textColor="@color/my_text_color"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_baseline_business_center_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_received_order"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:elevation="0.2dp"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="  Received Orders"
                android:textColor="@color/my_text_color"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_baseline_business_center_24" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
