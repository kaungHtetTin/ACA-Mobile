<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="120dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:background="@drawable/bg_price_stroke"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_initial"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/bg_edit_stroke"
        android:textSize="14sp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"
        android:paddingStart="10dp"
        app:drawableStartCompat="@drawable/ic_baseline_add_circle_outline_24" />


    <TextView
        android:id="@+id/tv_target"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/bg_edit_stroke"
        android:textSize="14sp"
        android:textColor="@color/my_text_color"
        android:layout_height="32dp"
        android:paddingEnd="10dp"
        app:drawableEndCompat="@drawable/ic_baseline_add_circle_outline_24" />


</LinearLayout>