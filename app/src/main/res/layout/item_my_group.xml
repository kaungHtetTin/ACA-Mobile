<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0.2dp"
    android:id="@+id/card_selected"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="0.1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_group_thumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_group_thumb"/>

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_text_color"
            android:textSize="18sp"
            android:layout_toEndOf="@id/iv_group_thumb"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/tv_group_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_group_thumb"
            android:layout_below="@id/tv_group_name"
            android:textSize="14sp"
            android:layout_margin="3dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>